{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Tracking CMake build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/tracking/build",  // Directorio de construcci√≥n
                "--config",
                "Debug"  // O "Release"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}